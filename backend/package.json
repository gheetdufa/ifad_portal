{
  "name": "backend",
  "version": "0.1.0",
  "bin": {
    "backend": "bin/backend.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "bash deploy.sh",
    "deploy:win": "powershell -ExecutionPolicy Bypass -File deploy.ps1",
    "deploy:staging": "cross-env AWS_SDK_LOAD_CONFIG=1 bash deploy.sh -s staging",
    "deploy:staging:win": "cross-env AWS_SDK_LOAD_CONFIG=1 powershell -ExecutionPolicy Bypass -File deploy.ps1 -Stage staging",
    "deploy:prod": "cross-env AWS_SDK_LOAD_CONFIG=1 bash deploy.sh -s prod",
    "deploy:prod:win": "cross-env AWS_SDK_LOAD_CONFIG=1 powershell -ExecutionPolicy Bypass -File deploy.ps1 -Stage prod"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "esbuild": "^0.21.5",
    "aws-cdk": "^2.1021.0",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "@aws-cdk/aws-lambda-nodejs": "^1.203.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.848.0",
    "@aws-sdk/client-dynamodb": "^3.848.0",
    "@aws-sdk/client-ses": "^3.848.0",
    "@aws-sdk/lib-dynamodb": "^3.850.0",
    "@types/aws-lambda": "^8.10.152",
    "@types/uuid": "^10.0.0",
    "aws-cdk-lib": "2.205.0",
    "constructs": "^10.0.0",
    "uuid": "^11.1.0"
  }
}
